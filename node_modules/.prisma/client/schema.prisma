// schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Karyawan model
model Karyawan {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String
  phone    String
  photo    String?
  users    User[]
}

// Role model
model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[] // Define the opposite relation field 'users'
}

// Cabang model
model Cabang {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[] // Define the opposite relation field 'users'
}

// User model
model User {
  id           Int      @id @default(autoincrement())
  role         Role     @relation(fields: [roleId], references: [id])
  is_superuser Boolean  @default(false)
  is_hr        Boolean  @default(false)
  is_karyawan  Boolean  @default(false)
  cabang       Cabang   @relation(fields: [cabangId], references: [id])
  karyawan     Karyawan @relation(fields: [karyawanId], references: [id])
  cabangId     Int
  karyawanId   Int
  roleId       Int
}
